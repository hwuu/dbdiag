# LLM 配置
llm:
  api_base: "http://localhost:11434/v1"
  api_key: "sk-"
  model: "Qwen/Qwen3-32B"
  temperature: 0.2
  max_tokens: 16384
  system_prompt: |
    你是一个问答助手，回答要简明扼要，使用中文，输出使用 markdown 格式。
    如果有什么不确定的问题，要反问用户，不要自己猜。

# Embedding 模型配置
embedding_model:
  api_base: "http://localhost:11435/v1"
  api_key: "sk-"
  model: "Qwen/Qwen3-Embedding-4B"
  dimension: 2560  # 向量维度（Qwen3-Embedding-4B 为 2560）

# 索引重建配置
rebuild_index:
  enable_clustering: false    # 是否启用聚类，默认 false
  similarity_threshold: 0.85  # 聚类相似度阈值（仅 enable_clustering=true 时有效）

# 推荐引擎配置
recommender:
  # 权重配置
  weights:
    popularity: 0.15          # 流行度权重
    specificity: 0.20         # 特异性权重
    hypothesis_priority: 0.40 # 假设优先级权重
    information_gain: 0.25    # 信息增益权重
  # 检索相关
  retrieval_top_k: 5          # 检索 top-m 现象
  recommend_top_n: 5          # 推荐 top-n 现象
  # 假设追踪
  hypothesis_top_k: 5         # 追踪 top-k 假设
  # 匹配阈值
  match_threshold: 0.75       # 观察匹配阈值，低于此值视为未匹配
  # 置信度阈值
  high_confidence_threshold: 0.80   # 高置信度阈值，达到后确认根因
  medium_confidence_threshold: 0.50 # 中等置信度阈值
  # information_gain 子权重
  confirmation_gain_weight: 0.6     # 确认收益权重
  discrimination_power_weight: 0.4  # 区分能力权重
